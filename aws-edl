name: MineAWSIPs

on:
  push:
  workflow_dispatch:
  pull_request:
  schedule:
    - cron: '3 * * * *'

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v2
        with:
          ref: MineAWSIPs
      - name: Create temp dir
        run: |-
          mkdir -p temp
      - name: Pull the AWS IPs
        run: |-
          nslookup www.aws.com | grep Address: | grep -v \#53 | awk '{print $2}'
      - name: Commit
        run: |-
          git config user.name "Automated"
          git config user.email "actions@users.noreply.github.com"
          git add -A
          timestamp=$(date -u)
          git commit -m "Latest data: ${timestamp}" || exit 0
      - name: Push
        run: |-
          git push
